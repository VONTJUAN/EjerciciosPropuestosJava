<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">
  <persistence-unit name="EscuelaPU">
    <class>ejerciciospropuestos1_tema3.Alumno</class>

    <properties>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/escuela"/>
      <property name="jakarta.persistence.jdbc.user" value="root"/>
      <property name="jakarta.persistence.jdbc.password" value=""/>
      <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

      <!-- CREA TABLA AUTOMÃTICAMENTE SI NO EXISTE -->
      <property name="hibernate.hbm2ddl.auto" value="update"/>

      <!-- Para ver SQL generado -->
      <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
